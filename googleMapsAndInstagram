          var index = intervalIndex++ % 2 + 1;
          console.log(index);
          //intervalFunctions[index];
          var site = "site" + index.toString();
          initialize(site);
        },5000);
        */

        // $("<img>").attr("src",response[0].images.thumbnail.url).appendTo("body");


    </script>
